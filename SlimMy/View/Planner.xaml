<Page x:Class="SlimMy.View.Planner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlimMy.View"
      xmlns:ViewModel="clr-namespace:SlimMy.ViewModel"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:dd="http://gong-wpf-dragdrop.com"
      mc:Ignorable="d" 
      Height="830" Width="1100" d:DataContext="{d:DesignInstance Type=ViewModel:PlannerViewModel}"
      Title="Planner" Background="White">

    <Page.DataContext>
        <ViewModel:PlannerViewModel/>
    </Page.DataContext>

    <Grid>
        <!-- Header -->
        <TextBlock Text="Planner" FontSize="28" FontWeight="Bold" Margin="30,20,0,0"/>

        <!-- Main Content 영역 -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="30,70,30,30" Background="White" CornerRadius="10">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- 리스트 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 위/아래 버튼 -->
                </Grid.ColumnDefinitions>

                <!-- 날짜 및 목표 설정 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="datePicker" 
                                Width="220" Height="40" FontSize="18" 
                                Padding="2" Background="White" 
                                SelectedDate="{Binding SelectedDate}" />
                    <Button Grid.Column="1" Content="목표 설정" 
                            Width="130" Height="40" FontSize="18" 
                            HorizontalAlignment="Right" 
                            Margin="10,0,0,0"
                            Background="#FFEEEEEE" Foreground="Black" BorderBrush="Gray"/>
                </Grid>

                <!-- 몸무게 입력 및 운동 선택 버튼 -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 몸무게 입력 -->
                    <Border Background="White" Padding="10" Width="500" HorizontalAlignment="Left" CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="몸무게" FontSize="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Grid Grid.Column="1" Margin="5,0">
                                <TextBox Name="searchTextBox" 
                                         Width="120" Height="35" FontSize="18" 
                                         VerticalContentAlignment="Center"/>
                                <TextBlock Text="몸무게 입력" IsHitTestVisible="False" 
                                           FontSize="16" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="Gray">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=searchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Label Grid.Column="2" Content="kg" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- 운동 선택 버튼 -->
                    <Button Grid.Column="2" Content="운동 선택" Foreground="Black"
                            Width="130" Height="45" FontSize="16"
                            Command="{Binding ExerciseCommand}"
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Cursor="Hand" Margin="10,0,0,0" Background="#FFEEEEEE"  BorderBrush="Gray"/>
                </Grid>

                <!-- 운동 리스트 + 위/아래 버튼 (Grid.Row=3) -->
                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 운동 리스트 -->
                    <ListBox Grid.Column="0" x:Name="MyListBox" 
             ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedPlannerData}"
             BorderThickness="1" BorderBrush="LightGray"
             Margin="0,0,10,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="500">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="[" />
                                    <TextBlock Grid.Column="1" Text="{Binding Minutes}" />
                                    <TextBlock Grid.Column="2" Text="분]" />
                                    <TextBlock Grid.Column="3" Text="{Binding Name}" />

                                    <!-- 오른쪽 정렬 -->
                                    <TextBlock Grid.Column="4" Text="{Binding Calories}" 
                       HorizontalAlignment="Right" Margin="5,0" />
                                    <TextBlock Grid.Column="5" Text="kcal" 
                       HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding SelectedPlnnaerCommand}" CommandParameter="{Binding SelectedItem, ElementName=MyListBox}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>

                    <!-- 위로 / 아래로 버튼 -->
                    <Grid Grid.Column="1" VerticalAlignment="Stretch" Height="500">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 위로 버튼 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 아래로 버튼 -->
                            <RowDefinition Height="*"/>
                            <!-- 빈 공간 -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- 저장 버튼 -->
                        </Grid.RowDefinitions>

                        <!--  위로 이동 -->
                        <Button Grid.Row="0" Content="위로" Width="60" Height="35" Margin="0,5" 
            Background="#FFEFEFEF" Foreground="Black" 
            Command="{Binding MoveUpCommand}" />

                        <!--  아래로 이동 -->
                        <Button Grid.Row="1" Content="아래로" Width="60" Height="35" Margin="0,5" 
            Background="#FFEFEFEF" Foreground="Black"
            Command="{Binding MoveDownCommand}" />

                        <!-- 수정 버튼 -->
                        <Button Grid.Row="3" Content="수정" Width="60" Height="35" Margin="0,5" 
        Background="#FFEFEFEF" Foreground="Black"
        Command="{Binding UpdateCommand}" />

                        <!-- 선 역할 -->
                        <Rectangle Grid.Row="4" Height="1" Fill="Gray" Margin="0,10"/>
                        
                        <!-- 삭제 버튼 -->
                        <Button Grid.Row="5" Content="삭제" Width="60" Height="35" Margin="0,5" 
        Background="#FFEFEFEF" Foreground="Black"
        Command="{Binding DeleteCommand}" />

                        <!-- 선 역할 -->
                        <Rectangle Grid.Row="6" Height="1" Fill="Gray" Margin="0,10"/>

                        <!-- 저장 버튼 -->
                        <Button Grid.Row="7" Content="저장" Width="60" Height="35" Margin="0,5" 
        Background="#FFEFEFEF" Foreground="Black"
        Command="{Binding SaveCommand}" Cursor="Hand" />
                    </Grid>
                </Grid>

                <!-- 총 칼로리 -->
                <Grid Grid.Row="4" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="총 칼로리" FontSize="18" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Width="200" Height="40" 
                             FontSize="18" VerticalContentAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
