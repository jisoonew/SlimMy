<Page x:Class="SlimMy.View.Planner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlimMy.View"
      xmlns:ViewModel="clr-namespace:SlimMy.ViewModel"
      mc:Ignorable="d" 
      Height="830" Width="1100"  d:DataContext="{d:DesignInstance Type=ViewModel:PlannerViewModel}"
      Title="Planner" Background="White">

    <Page.DataContext>
        <ViewModel:PlannerViewModel/>
    </Page.DataContext>
    
    <Grid>
        <!-- Header -->
        <TextBlock Text="Planner" FontSize="25" Margin="30,20,0,0" />

        <!-- Main Content 영역 -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="30,70,30,30" Background="LightGray">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <!-- 날짜 & 목표 설정 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 몸무게 입력 & 운동 선택 버튼 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 순서 변경 버튼 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 운동 리스트 -->
                    <RowDefinition Height="*"/>
                    <!-- 총 칼로리 -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 날짜 및 목표 설정 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="datePicker" 
                                Width="220" Height="40" FontSize="20" 
                                Margin="0,0,10,0" Padding="2" 
                                Background="White" 
                                SelectedDate="{Binding SelectedDate}"/>
                    <Button Grid.Column="1" Content="목표 설정" 
                            Width="130" Height="40" FontSize="20" 
                            HorizontalAlignment="Right" 
                            Background="White" Foreground="Black"/>
                </Grid>

                <!-- 몸무게 입력 및 운동 선택 버튼 (수평 그리드 사용) -->
                <Grid Grid.Row="1" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 몸무게 입력 영역 -->
                    <Border Background="White" Padding="10" Width="500" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="몸무게" FontSize="20" VerticalAlignment="Center"/>
                            <Grid Grid.Column="1" Margin="10,0,10,0">
                                <TextBox Name="searchTextBox" 
                                         Width="120" Height="40" FontSize="20" 
                                         VerticalContentAlignment="Center"/>
                                <TextBlock Text="몸무게 입력" IsHitTestVisible="False" 
                                           FontSize="20" Margin="5,0,0,0" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                            <Setter Property="Foreground" Value="#FF858585"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=searchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Label Grid.Column="2" Content="kg" FontSize="25" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- 운동 선택 버튼 (오른쪽 정렬) -->
                    <Button Grid.Column="2" Content="운동 선택" 
                            Width="120" Height="50" Command="{Binding ExerciseCommand}"
                            HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"/>
                </Grid>

                <!-- 순서 변경 버튼 (몸무게 입력 영역 아래) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,10">
                    <Button Content="위로" Width="75" Margin="5"/>
                    <Button Content="아래로" Width="75" Margin="5"/>
                </StackPanel>

                <!-- 운동 리스트 (ListBox) -->
                <ListBox Grid.Row="3" x:Name="MyListBox" 
                         ItemsSource="{Binding Items}" 
                         Margin="0,10"/>

                <!-- 총 칼로리 입력 -->
                <Grid Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="총 칼로리" FontSize="20" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Width="200" Height="40" 
                             FontSize="20" VerticalContentAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
