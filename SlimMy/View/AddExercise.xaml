<Window x:Class="SlimMy.View.AddExercise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlimMy.View"
        mc:Ignorable="d"
        Title="AddExercise" Height="500" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Width="370" Margin="0,10,0,0">
            <TextBox Width="300"></TextBox>
            <Button Content="검색" Width="60" Margin="10,0,0,0"></Button>
        </StackPanel>

        <StackPanel Margin="0,50,0,0">
            <ScrollViewer VerticalScrollBarVisibility="auto">
                <WrapPanel>
                    <WrapPanel Background="LightGray" Margin="20,10,20,0" Height="350" Width="660" Orientation="Horizontal">
                        <StackPanel>
                            <Image  Source="/Resources/Logo.png" Width="120"></Image>
                            <Label HorizontalAlignment="Center">운동명</Label>
                        </StackPanel>
                    </WrapPanel>
                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
