<Window x:Class="SlimMy.View.DietGoal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlimMy.ViewModel"
        d:DataContext="{d:DesignInstance Type=local:DietGoalViewModel}"
        mc:Ignorable="d"
        Title="DietGoal" Height="450" Width="520" WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="운동 목표 설정"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <Border Grid.Row="1"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="10"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 운동 각오 -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="운동 각오"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                <TextBox Grid.Row="0" Grid.Column="1"
                         Height="30"
                         Padding="8,4"
                         VerticalContentAlignment="Center"
                         MaxLength="100"
                         Text="{Binding DietGoal.Mindset}"
                         ToolTip="예) 3개월 안에 5kg 감량!"/>

                <!-- 목표 기간 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="목표 기간"
                           VerticalAlignment="Center"
                           Margin="0,12,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Row="1" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,12,0,0">
                    <DatePicker Width="140" Height="30" SelectedDate="{Binding DietGoal.StartDate}"/>
                    
                    <TextBlock Text=" ~ "
                               VerticalAlignment="Center"
                               Margin="8,0"/>

                    <DatePicker Width="140" Height="30" SelectedDate="{Binding DietGoal.EndDate}" DisplayDateStart="{Binding DietGoal.StartDate}"/>
                </StackPanel>

                <!-- 현재 체중 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="시작 체중"
                           VerticalAlignment="Center"
                           Margin="0,12,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Row="2" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,12,0,0">
                    <TextBox Width="80" Height="30"
                             Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="3"
                             Padding="8,4"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Right"/>
                    
                    <TextBlock Text="kg" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- 키 -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="키"
                           VerticalAlignment="Center"
                           Margin="0,12,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Row="3" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,12,0,0">
                    <TextBox Width="80" Height="30"
                             Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="3"
                             Padding="8,4"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Right"/>
                    <TextBlock Text="cm" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- 목표 체중 -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="목표 체중"
                           VerticalAlignment="Center"
                           Margin="0,12,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Row="4" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,12,0,0">
                    <TextBox Width="80" Height="30"
                             Text="{Binding DietGoal.GoalWeight}"
                             MaxLength="3"
                             Padding="8,4"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Right"/>
                    <TextBlock Text="kg" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- BMI 계산 -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="BMI"
                           VerticalAlignment="Center"
                           Margin="0,12,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Row="5" Grid.Column="1"
                            Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="BMI = weight(kg) / (height(m) × height(m))"
                               Foreground="#666666"/>

                    <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                        <TextBlock Text="결과: "
                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding BMI}"
                   FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="목표 설정"
                    Command="{Binding SaveCommand}"
                    MinWidth="110"
                    Height="34"
                    Padding="12,0"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
