<Window x:Class="SlimMy.View.BanUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlimMy.View"
        mc:Ignorable="d"
        Title="방출 설정" Width="520" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="방출 설정"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,14"/>

        <Border Grid.Row="1" Padding="12" CornerRadius="10" BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="대상:" FontWeight="SemiBold" Margin="0,0,10,6"/>
                <TextBlock Grid.Column="1" Text="{Binding TargetDisplayName}" Margin="0,0,0,6"/>

                <TextBlock Grid.Row="1" Text="채팅방:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ChatRoomDisplayName}"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" Header="벤 유형" Margin="0,14,0,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <RadioButton Content="기간제 벤"
                                 GroupName="BanType"
                                 IsChecked="{Binding IsTemporary, Mode=TwoWay}"
                                 Margin="0,0,20,0"/>
                    <RadioButton Content="영구 벤(수동 해제)"
                                 GroupName="BanType"
                                 IsChecked="{Binding IsPermanent, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="기간:" Width="52" VerticalAlignment="Center"/>
                    <ComboBox Width="220"
                              ItemsSource="{Binding DurationPresets}"
                              SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                              IsEnabled="{Binding IsTemporary}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Text="(기본 1일)"
                               Margin="10,0,0,0"
                               Opacity="0.7"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Border Margin="0,10,0,0" Padding="10" Background="#F7F7F7" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="적용 결과" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding BanSummaryText}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center"
                       Foreground="#C00000"
                       Text="{Binding ErrorText}"
                       TextWrapping="Wrap"
                       Margin="0,0,12,0"/>

            <Button Grid.Column="1"
                    Content="취소"
                    Width="90" Height="36"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>

            <Button Grid.Column="2"
                    Content="방출 적용"
                    Width="110" Height="36"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding CanConfirm}"/>
        </Grid>
    </Grid>
</Window>
