<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlimMy.View"
        xmlns:ViewModel="clr-namespace:SlimMy.ViewModel" x:Class="SlimMy.View.Test"
        mc:Ignorable="d"
        Title="Test" Height="450" Width="800">

    <Window.DataContext>
        <ViewModel:Login/>
    </Window.DataContext>

    <StackPanel Width="280" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" Height="600">
        <Label Width="200" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="15" Content="회원가입"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Width="280">

            <StackPanel Width="170" Margin="10,0,0,0">
                <!-- 비밀번호 -->
                <PasswordBox x:Name="passwordBox" Margin="0,19,0,0" FontSize="15" />
            </StackPanel>
        </StackPanel>

        <!-- 회원가입 버튼 -->
        <Button Margin="0,25,0,0" FontSize="15" Padding="1,3,1,3" Content="회원가입" Command="{Binding TestCommand}" />
    </StackPanel>
</Window>
